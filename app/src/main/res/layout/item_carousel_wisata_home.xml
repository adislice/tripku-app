<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/gambar_wisata"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/contoh1"
                android:foreground="@drawable/shape_gradient"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintDimensionRatio="H,16:8"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:id="@+id/nama_wisata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Candi Prambanan"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingHorizontal="8dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/lokasi_wisata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yogyakarta"

                    android:paddingHorizontal="8dp"
                    android:paddingBottom="8dp"
                    android:textColor="#d6d6d6"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.core.widget.NestedScrollView>

